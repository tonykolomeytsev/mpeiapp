<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
            android:id="@+id/viewFrame"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:background="@drawable/background_rounded_rect_8dp"
            android:backgroundTint="?attr/colorGray10"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"/>

    <View
            android:id="@+id/viewHeader"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/background_rounded_rect_4dp"
            android:backgroundTint="?attr/shimmerColor"
            app:layout_constraintEnd_toEndOf="@id/viewFrame"
            app:layout_constraintTop_toTopOf="@+id/viewFrame"
            app:layout_constraintStart_toStartOf="@id/viewFrame"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"/>

    <View
            android:id="@+id/viewSubHeader"
            android:background="@drawable/background_rounded_rect_4dp"
            android:backgroundTint="?attr/shimmerColor"
            app:layout_constraintTop_toBottomOf="@id/viewHeader"
            android:layout_width="200dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@id/viewFrame"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/viewSubHeader"
            android:background="@drawable/background_rounded_rect_4dp"
            android:backgroundTint="?attr/shimmerColor"
            android:layout_width="220dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@id/viewFrame"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>