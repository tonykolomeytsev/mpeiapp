<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/item_profile_header"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="56dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="?attr/colorGray70"
                android:text="@string/bars_stub_description"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="16dp">

            <LinearLayout
                    android:id="@+id/buttonSchedules"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:alpha="0.5">

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_navigation_schedule"
                        app:tint="?colorMain" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/bars_stub_btn_schedules"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="?colorMain"/>
                
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/buttonNotes"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?selectableItemBackgroundBorderless">

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_sticky_note_48"
                        app:tint="?colorMain" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/bars_stub_btn_notes"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="?colorMain"/>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/buttonSettings"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?selectableItemBackgroundBorderless">

                <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_settings_24"
                        app:tint="?colorMain" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/bars_stub_btn_settings"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="?colorMain"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>