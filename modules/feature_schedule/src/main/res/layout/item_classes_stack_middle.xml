<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?attr/colorGray10"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingBottom="16dp">

    <TextView
            android:id="@+id/textViewClassesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Инженерная и компьютерная графика"
            android:textColor="?attr/colorGray90"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textViewClassesPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Аудитория Б-407"
            android:textColor="?attr/colorGray70"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/textViewClassesName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/textViewClassesPerson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Чахеев Е.Я."
            android:textColor="?attr/colorGray70"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewClassesPlace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageViewAttachment"/>

    <ImageView
            android:id="@+id/imageViewAttachment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_attach_file_24px"
            android:tint="?attr/colorGray70"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:id="@+id/colorTag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/background_classes_number"
            android:backgroundTint="@color/colorGreen"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="@id/textViewClassesName"
            app:layout_constraintBottom_toTopOf="@id/textViewClassesName"/>

    <TextView
            android:id="@+id/textViewClassesType"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            tools:text="ЛЕКЦИЯ"
            android:textColor="?attr/colorGray90"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="8dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/colorTag"
            app:layout_constraintTop_toTopOf="@id/colorTag"
            app:layout_constraintBottom_toBottomOf="@id/colorTag"/>

</androidx.constraintlayout.widget.ConstraintLayout>