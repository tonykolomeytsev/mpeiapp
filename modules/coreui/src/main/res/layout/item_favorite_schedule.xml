<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_rounded_rect_8dp"
        android:backgroundTint="?attr/colorGray10">

    <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Имя группы"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="?attr/colorBlack"/>

    <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Описание группы"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="?attr/colorGray70"/>

</LinearLayout>