<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="false">
        <ripple android:alpha="0.2" android:color="?attr/colorWhite">
            <item>
                <shape>
                    <solid android:color="?attr/colorCloud"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <ripple android:alpha="0.5" android:color="?attr/colorWhite">
            <item>
                <shape>
                    <solid android:color="?attr/colorMain"/>
                    <corners android:radius="16dp"/>
                </shape>
            </item>
        </ripple>

    </item>
    <item>
        <shape>
            <solid android:color="?attr/colorGray70"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>