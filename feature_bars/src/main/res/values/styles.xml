<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Mark">
        <item name="android:background">@drawable/mark_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="CollapsingToolbarLayoutCollapsedTextStyle" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CollapsingToolbarLayoutCollapsedTextStyleInv" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#00ffffff</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RightsHeader">
        <item name="android:textColor">?attr/colorBlack</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RightsSubheader">
        <item name="android:textColor">?attr/colorBlack</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="RightsPar">
        <item name="android:textColor">?attr/colorBlack</item>
        <item name="android:alpha">0.75</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="BarsNavButtons">
        <item name="android:alpha">0.8</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/bars_button_bg</item>
    </style>

</resources>