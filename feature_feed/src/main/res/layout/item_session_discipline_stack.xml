<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:theme="@style/AppTheme"
        tools:background="#d0d0d0">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="6dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="6dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_info_block"
            android:clipToPadding="false">


        <TextView
                android:id="@+id/textViewCoupleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:textColor="?themeColorBlack"
                android:textSize="18sp"
                tools:text="Линейная алгебра"
                android:layout_marginRight="16dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

            <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">

                <TextView
                        android:id="@+id/textViewEventDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11 Янв"
                        android:textSize="16sp"
                        android:layout_gravity="right"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:fontFamily="sans-serif-medium"/>
                <TextView
                        android:id="@+id/textViewEventTime1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11:10"
                        android:textSize="14sp"
                        android:layout_gravity="right"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">

                <TextView
                        android:id="@+id/textViewEventType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Консультация"/>

                <TextView
                        android:id="@+id/textViewCouplePlace1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:textSize="14sp"
                        tools:text="Б-407" />

                <TextView
                        android:id="@+id/textViewCoupleTeacher1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.75"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:textSize="14sp"
                        tools:text="Кудин С.Ф." />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayoutSecondSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:clipToPadding="false">

            <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorTransparent"
                        android:alpha="0.2"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                <TextView
                        android:id="@+id/textViewEventDate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="12 Янв"
                        android:textSize="16sp"
                        android:layout_gravity="right"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:fontFamily="sans-serif-medium"/>
                <TextView
                        android:id="@+id/textViewEventTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="9:20"
                        android:textSize="14sp"
                        android:layout_gravity="right"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp">


                <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        tools:background="@color/colorBlack"
                        android:background="?themeColorDivider"
                        android:alpha="0.2"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="-8dp"/>

                <TextView
                        android:id="@+id/textViewEventType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Экзамен"/>

                <TextView
                        android:id="@+id/textViewCouplePlace2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:textSize="14sp"
                        tools:text="Б-407" />

                <TextView
                        android:id="@+id/textViewCoupleTeacher2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.75"
                        tools:textColor="@color/colorBlack"
                        android:textColor="?themeColorBlack"
                        android:textSize="14sp"
                        tools:text="Кудин С.Ф." />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="16dp"
            android:alpha="0.15"
            tools:background="@color/colorBlack"
            android:background="?themeColorDivider"
            android:layout_gravity="bottom" />

</FrameLayout>
